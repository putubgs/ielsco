{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    /* âœ… ADDITIONS BELOW */
    "baseUrl": ".", // Allow absolute paths like "@/utils/email"
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
        "@/*": ["./src/*"]
      },

    "plugins": [
      {
        "name": "next"
      }
    ]
  },
    "include": [
      "next-env.d.ts",
      "src/**/*",
      ".next/types/**/*.ts"
      ]
      ,
  "exclude": [
    "node_modules"
  ]
}
